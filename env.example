# ========================================

# MySQL 配置
MYSQL_ROOT_PASSWORD=root123456
MYSQL_DATABASE=kamanote_tech
MYSQL_USER=kamanotes
MYSQL_PASSWORD=kamanotes123
MYSQL_PORT=3306

# Redis 配置
REDIS_PORT=6379

# 后端配置
BACKEND_PORT=8080
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# 前端配置
FRONTEND_PORT=80

# 上传文件访问 URL 前缀
